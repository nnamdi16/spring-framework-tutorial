<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!--    List element of constructor arg is used-->
    <bean id="tweet" class="com.SetterInjection.Tweet" >
        <property name="id" value="1"></property>
        <property name="name" value="What is Java?"></property>
        <property name="answers">
            <list>
                <value>Java is a programming Language</value>
                <value>Java is a platform for learning </value>
                <value>Java is an Island in indonesia for Tourism</value>
            </list>
        </property>
    </bean>

<!--    The ref element ,is used to define the reference of another  bean-->
    <bean id="reply1" class="com.SetterInjection.Reply">
        <property name="id" value="1"></property>
        <property name="name" value="Java is a programming language"></property>
        <property name="by" value="Ravi Malik"></property>
    </bean>
    <bean id="reply2" class="com.SetterInjection.Reply">
        <property name="id" value="2"></property>
        <property name="name" value="Java is an Object Oriented  programming language"></property>
        <property name="by" value="Sachin"></property>
    </bean>
    <bean id="issues" class="com.SetterInjection.Issues">
        <property name="id" value="1" ></property>
        <property name="name" value="What is Java?" ></property>
        <property name="reply">
            <list>
                <ref bean="reply1"></ref>
                <ref bean="reply2"></ref>
            </list>
        </property>
    </bean>
    <bean id="post" class="com.SetterInjection.Post">
        <property name="id" value="1"></property>
        <property name="name" value="What is Python"></property>
        <property name="post" >
            <map>
                <entry key="Python is a Machine Learnig programming Language" value="Sonoro"></entry>
                <entry key="Python is a platform" value="Sachin"></entry>

            </map>
        </property>
    </bean>

</beans>